<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/share_and_decline"
    tools:context="com.dare.DeclineActivity">


    <LinearLayout
        android:layout_margin="@dimen/activity_margin"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtShareOnFbTitleQuestion"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did you have fun? \nDid you crazy things?"
            android:textSize="@dimen/large_text"/>
        <TextView
            android:layout_marginTop="32dp"
            android:id="@+id/txtShareOnfbText"
            android:gravity="center"

            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share the video with your friends and have fun together.\nWe wait you to do more crazy things. "
            android:textSize="@dimen/normal_text"/>
        <TextView
            android:layout_marginTop="@dimen/activity_margin"
            android:id="@+id/ShareOnfbSmallText"
            android:gravity="center"

            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We love crazy people!\nThank you fo using our App.\nDon't miss to rate us!"
            android:textSize="@dimen/small_text"/>

        <LinearLayout
            android:clickable="true"
            android:layout_marginTop="@dimen/activity_margin"
            android:id="@+id/btnShareVideoOnFacebook"
            android:background="@drawable/button_blue_selector"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/txtFacebookShare"
                android:padding="10dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_facebook"
                android:text="Share video on our Facebook page!"
                android:textColor="@android:color/white"
                android:textSize="@dimen/normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <ImageView
            android:id="@+id/imgBackShareOnFb"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back_round_icon"/>
    </LinearLayout>
</RelativeLayout>
